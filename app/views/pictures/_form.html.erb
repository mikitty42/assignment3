<%= form_with(model: @picture,local: true, data: { turbo: false },url: choose_new_or_edit) do |form| %>
    <% if @picture.errors.any? %>
      <div id='error_explanation'>
        <h2><%= @picture.errors.count %>件のエラーがあります</h2>
         <ul>
            <% @picture.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
         </ul>
      </div>
    <% end %>
    
    <div id='picture_content'>
        <%=form.label :content %>
        <%= form.text_field :content %>
    </div>
    
    <div id='picture_image'>
        <%= form.label :image %>
        <%= image_tag(@picture.image.url) if @pictute.image && @picture.image.url %>
        <%= image_tag(feed.image.url) if feed.image && feed.image.url %>
        <%= form.file_field :image %>
        <%= form.hidden_field :image_cache %>
    </div>
    
    <%= form.submit %>
<% end %>
    
